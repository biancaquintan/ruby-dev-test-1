<%= form_with(model: directory, local: true) do |form| %>
  <% if directory.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(directory.errors.count, "error") %> prohibited this directory from being saved:</h2>

      <ul>
        <% directory.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label 'Select directory (optional)' %>
    <%= form.select :directory_id, options_for_select(Directory.all.map{|d|[d.title, d.id]}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
