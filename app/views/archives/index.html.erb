<p id="notice"><%= notice %></p>

<center>
  <h1>Archives</h1>
  <%= link_to '+ NEW ARCHIVE', new_archive_path %>
  <hr><br>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>File</th>
        <th>Directory</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @archives.each do |archive| %>
        <tr>
          <td><%= archive.name %></td>
          <td><%= archive.description %></td>
          <td><%= archive.file %></td>
          <td><%= archive.directory.title %></td>
          <td><%= link_to 'Show', archive %></td>
          <td><%= link_to 'Edit', edit_archive_path(archive) %></td>
          <td><%= link_to 'Destroy', archive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</center>
<br>

